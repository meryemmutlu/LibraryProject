@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>LibraryApp</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css">
    <!-- IonIcons -->
    <link rel="stylesheet" href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<!--
BODY TAG OPTIONS:
=================
Apply one or more of the following classes to to the body tag
to get the desired effect
|---------------------------------------------------------|
|LAYOUT OPTIONS | sidebar-collapse                        |
|               | sidebar-mini                            |
|---------------------------------------------------------|
-->
<body class="hold-transition sidebar-mini">

    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">

                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Home/Index" class="nav-link">Home</a>
                </li>

                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Employee/LogIn" class="nav-link">Çıkış</a>
                </li>
            </ul>

            <!-- SEARCH FORM -->
            <form class="form-inline ml-3" action="/Book/Index">
                <div class="input-group input-group-sm">
                    <input class="form-control form-control-navbar" type="search" name="q" placeholder="Kitap Ara" aria-label="Search">
                    <div class="input-group-append">
                        <button class="btn btn-navbar" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </form>



            <!-- Right navbar links -->

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="/Home/Index" class="brand-link">
                <img src="~/AdminLTE-3.0.4/dist/img/book.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
                     style="opacity: .8">
                <span class="brand-text font-bold-light">LibraryApp</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE-3.0.4/dist/img/user1.png" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="/Home/Index" class="d-block">@User.Identity.Name</a>
                    </div>

                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                             with font-awesome or any other icon font library -->
                        <li class="nav-item has-treeview">
                            <a href="/BorrowedBook/Index" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Tüm İşlemler

                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/BorrowedBook/PageOfBorrow" class="nav-link">
                                <i class="nav-icon fa fa-angle-double-right"></i>
                                <p>Ödünç Verilenler</p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/BorrowedBook/ReturnPage" class="nav-link">
                                <i class="nav-icon fa fa-angle-double-right"></i>
                                <p>İade Edilenler</p>
                            </a>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="/Book/Index" class="nav-link">
                                <i class="nav-icon fa fa-book"></i>
                                <p>
                                    Kitaplar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Author/Index" class="nav-link">
                                <i class="nav-icon fas fa-copy fas fa-pen-alt"></i>
                                <p>
                                    Yazarlar
                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Genre/Index" class="nav-link">
                                <i class="nav-icon fas as fa-table"></i>
                                <p>
                                    Türler

                                </p>
                            </a>
                        </li>
                        <li class="nav-item has-treeview">
                            <a href="/Member/Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-pie as fa-user-friends"></i>
                                <p>
                                    Üyeler

                                </p>
                            </a>
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper sidebar-light-white">
            <!-- Content Header (Page header) -->
            @*  <div class="content-header">
            <div class="container-fluid">
            <div class="row mb-2">


            </div><!-- /.row -->
            </div><!-- /.container-fluid -->
            </div> *@
            <!-- /.content-header -->
            <!-- Main content -->
            <div class="content m-3">

                @RenderBody()

                <!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->

    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE -->
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>

    <!-- OPTIONAL SCRIPTS -->
    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/pages/dashboard3.js"></script>
</body>
</html>

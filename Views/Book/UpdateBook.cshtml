@using LibraryProject.Models.Entities
@model Book
@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Views/Shared/_LibraryLayout.cshtml";
}

<h2>Kitap Güncelle</h2>
<br />
<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-5">
            <div class="md-3">
                <input type="hidden" class="form-control" name="BookId" value="@Model.BookId" />
            </div>
            <div class="md-3">
                <label style="padding-bottom:3px;font-weight:600">Kitap Adı</label>
                <input type="text" class="form-control" name="BookTitle" value="@Model.BookTitle" />
            </div>
            <br />
            <div class="md-3">
                <label style="padding-bottom:3px;font-weight:600">Kitap Türü</label>
                @Html.DropDownListFor(x => x.GenreId, (List<SelectListItem>)ViewBag.genres, "Tür Seçiniz", new { @class = "form-control" })
            </div>
            <br />
            <div class="md-3">
                <label style="padding-bottom:3px;font-weight:600">Kitap Yazarı</label>
                @Html.DropDownListFor(x => x.AuthorId, (List<SelectListItem>)ViewBag.authors, "Yazar Seçiniz", new { @class = "form-control" })
            </div>
            <br />
            <div class="md-3">
                <label style="padding-bottom:3px;font-weight:600">Kitap Resmi</label>
                <input type="file" name="file" class="form-control" value="@Model.BookImage" />
            </div>
            <br />
            <button class="btn btn-success">Güncelle</button>
        </div>
    </div>
</form>

